                              <m:mrow>
                                <m:mn>2</m:mn>
                              </m:mrow>
                            </m:mstyle>
                          </m:mfrac>
                        </m:mfenced>
                      </m:mrow>
        <m:mstyle fontsize="8pt">   
                   <m:mover accent="false">
                        <m:mstyle fontsize="20pt">
                          <m:mrow>
                            <m:mi>→</m:mi>
                          </m:mrow>
                        </m:mstyle>
                        <m:mo stretchy="false">F</m:mo>            
                      </m:mover>
        </m:mstyle>
                      <m:mfrac>
                        <m:mstyle fontsize="12pt">
                          <m:mrow>
                            <m:mn>1</m:mn>
                          </m:mrow>
                        </m:mstyle>
                        <m:mstyle fontsize="12pt">
                          <m:mrow>
