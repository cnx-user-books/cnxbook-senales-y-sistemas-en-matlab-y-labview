                          <m:mrow>
                            <m:mrow>
                              <m:mi>X</m:mi>
                              <m:mo stretchy="false">(</m:mo>
                              <m:mrow>
                                <m:mi>f</m:mi>
                                <m:mo stretchy="false">−</m:mo>
                                <m:msub>
                                  <m:mi>f</m:mi>
                                  <m:mn>0</m:mn>
                                </m:msub>
                              </m:mrow>
                              <m:mstyle fontsize="12pt">
                                <m:mrow>
                                  <m:mrow>
                                    <m:mrow>
                                      <m:mo stretchy="false">)</m:mo>
                                      <m:mo stretchy="false">+</m:mo>
                                      <m:mi>X</m:mi>
                                    </m:mrow>
                                    <m:mo stretchy="false">(</m:mo>
                                    <m:mrow>
                                      <m:mi>f</m:mi>
                                      <m:mo stretchy="false">+</m:mo>
                                      <m:msub>
                                        <m:mi>f</m:mi>
                                        <m:mn>0</m:mn>
                                      </m:msub>
                                    </m:mrow>
                                  </m:mrow>
                                </m:mrow>
                              </m:mstyle>
                              <m:mstyle fontsize="12pt">
                                <m:mrow>
                                  <m:mo stretchy="false">)</m:mo>
                                </m:mrow>
